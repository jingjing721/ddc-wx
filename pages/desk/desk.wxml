<!--index.wxml-->
<view class="container">
  <movable-area class="movable-wrap" >
    <image src="{{bgUrl}}" class="mova-bg" mode="widthFix"></image>
    <movable-view
        bindchange="onChange"
        direction="all"
        catchtap="bindZindex"
        wx:for="{{scaleSrc}}"
        wx:key="{{index}}"
        data-index="{{index}}"
        animation="{{false}}"
        x="{{item.x}}"
        y="{{item.y}}"
        style="z-index:{{item.zindex}}"
    >
      <image
          class="scale-img"
          src="{{item.foodImg}}"
      ></image>
      <view class="close" catchtap="bindClose" data-index="{{index}}">×</view>
    </movable-view>
  </movable-area>
  <view class="scroll-bg">
    <scroll-view class="scroll-view_h" scroll-x>
      <view class="scroll-view_tab">
        <view wx:for="{{viewData}}" wx:key="{{index}}" data-index="{{index}}" bindtap="bindClass" class="view-class active-{{isActive == index}}">{{item.foodStyleName}}</view>
      </view>
    </scroll-view>
    <scroll-view class="scroll-view_cont" scroll-x style="width: 100%; white-space: nowrap; display: flex">
      <view class="left">
        <view class="view-item" wx:for="{{listData}}" wx:if="{{index%2 == 0}}">
          <image src="{{item.foodImg}}" wx:key="{{item.id}}" class="view-img" data-index="{{index}}" data-cid="{{item.foodStyle}}" bindtap="bindAdd"></image>
          <text class="view-text">{{item.foodName}}</text>
        </view>
      </view>
      <view class="right">
        <view class="view-item" wx:for="{{listData}}" wx:if="{{index%2 == 1}}">
          <image src="{{item.foodImg}}" wx:key="{{item.id}}" class="view-img" data-index="{{index}}" data-cid="{{item.foodStyle}}" bindtap="bindAdd"></image>
          <text class="view-text">{{item.foodName}}</text>
        </view>
      </view>
    </scroll-view>
  </view>
  <button
      type="primary"
      bindtap="bindNext"
      class="nextStep"
      wx:if="{{isBottonShow}}"
  >继 续</button>
</view>
